<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashQuiz.List"
             xmlns:ViewModels="clr-namespace:FlashQuiz.ViewModels"
             Title="List">

    <ContentPage.BindingContext>
        <ViewModels:Mvvm1ViewModel x:Name="vm"/>
    </ContentPage.BindingContext>

    <VerticalStackLayout BackgroundColor="Gray">
        <Label 
            Text="CRUD par lâ€™exemple : liste de voeux"
            VerticalOptions="Center"
            HorizontalOptions="Center" FontAttributes="Bold" FontSize="Title" />

        <HorizontalStackLayout Spacing="10" Padding="10" >
            <Label Text="Faites un voeu:" VerticalTextAlignment="Center" />
            <Entry Margin="5,0,0,0" Text="{Binding WishEntry}" x:Name="wishEntry" MinimumWidthRequest="300" />

        </HorizontalStackLayout>

        <Button BorderColor="AliceBlue"
                    BorderWidth="5"
                    Margin="0,5,0,0"
                    Text="Ajouter"
                    Command="{Binding AddWishCommand}"
                    CommandParameter="{Binding WishEntry}"
                    MaximumWidthRequest="300">
        </Button>

        <Label Text="Contenu de la lampe magique" FontSize="Subtitle" HorizontalTextAlignment="Center" Margin="0,20,0,0" />
        <CollectionView Margin="0, 5, 0, 0" SelectionMode="None" ItemsSource="{Binding Wishes}" SelectedItem="{Binding SelectedWish, Mode=TwoWay}" VerticalOptions="FillAndExpand">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Content -->
                    <Grid Margin="0, 10, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding Definition}" Grid.Column="0" FontAttributes="Bold" FontSize="Medium"></Label>

                        <ImageButton Grid.Column="1" Margin="10, 0, 0, 0" Source="edit.png" WidthRequest="20" HeightRequest="20" Command="{Binding Source={x:Reference vm}, Path=EditCommand}" CommandParameter="{Binding .}"></ImageButton>

                        <Button Grid.Column="2" Margin="0, 0, 0, 0"
                            Text="Delete"
                            Command="{Binding Source={x:Reference vm}, Path=DeleteCommand}"
                            CommandParameter="{Binding .}"></Button>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>